{
  "redirects": [
    {
      "source": "/sitemap.xml",
      "destination": "https://ageofgenz-backend.onrender.com/sitemap.xml",
      "permanent": true
    },
    {
      "source": "/robots.txt", 
      "destination": "https://ageofgenz-backend.onrender.com/robots.txt",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/article/:path*",
      "destination": "/api/article-proxy"
    },
    {
      "source": "/api/:path*",
      "destination": "https://ageofgenz-backend.onrender.com/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/article/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=3600, stale-while-revalidate"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "text/plain"
        }
      ]
    }
  ]
}