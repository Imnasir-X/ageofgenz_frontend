{
  "functions": {
    "api/article/[...slug].js": {
      "maxDuration": 10
    }
  },
  "redirects": [
    {
      "source": "/sitemap.xml",
      "destination": "https://ageofgenz-backend.onrender.com/sitemap.xml",
      "permanent": true
    },
    {
      "source": "/robots.txt",
      "destination": "https://ageofgenz-backend.onrender.com/robots.txt",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/article/:slug*",
      "destination": "/api/article/:slug*"
    },
    {
      "source": "/api/:path*",
      "destination": "https://ageofgenz-backend.onrender.com/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
